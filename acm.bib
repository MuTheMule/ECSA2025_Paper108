articleno = {6},
numpages = {8},
keywords = {IoT, adaptive security, e-health, game theory, security metrics},
location = {Zurich, Switzerland},
series = {ASPI '13}
}

@inproceedings{10.1145/3445969.3450422,
author = {Heininger, Richard and Stary, Chris},
