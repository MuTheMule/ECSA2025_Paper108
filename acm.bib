@inproceedings{10.1145/3652620.3687819,
author = {Karaduman, Burak and Tezel, Baris Tekin and Challenger, Moharram},
title = {Static Analysis of BDI Agents on CPS using Petri Nets and MDE Techniques},
year = {2024},
isbn = {9798400706226},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3652620.3687819},
doi = {10.1145/3652620.3687819},
abstract = {This paper introduces a method for the static analysis of belief-desire-intention (BDI) agents integrated with cyber-physical systems (CPS) using Petri nets (PN) and Model-driven Engineering (MDE) techniques, especially for their communication. CPS integrates computational and physical elements that need verification to ensure correct and safe operations before deploying BDI agents. The BDI agents provide intelligent behaviour in CPS, while PN provides a framework for analyzing these behaviours. By simulating PN, the operation of BDI agents can be analysed statically before deployment on CPS. In this regard, MDE enables the transformation of the semantic space of BDI agents into PN. Due to the BDI model's high-level abstraction, high-level expressiveness, such as Colored Petri nets (CPN), is required to detect undesired execution paths within the agent or from another agent via messaging. This process applies the Jason BDI AgentSpeak codes translation into a CPN model. This mapping paves the way to verify reachability, boundedness, and deadlock properties. Additionally, a case study is presented to illustrate the method's applicability. The results demonstrate the feasibility of this approach with multiple agents communicating via a specific messaging structure.},
booktitle = {Proceedings of the ACM/IEEE 27th International Conference on Model Driven Engineering Languages and Systems},
pages = {1076–1085},
numpages = {10},
keywords = {coloured petri nets, BDI agents analysis, reachability, boundedness, deadlock, cyber-physical systems},
location = {Linz, Austria},
series = {MODELS Companion '24}
}

@article{10.1145/3729230,
author = {Xie, Kunyu and Zhang, Lin and Yang, Yuan and Li, Xiaohe and Khedri, Ridha and Chen, Zhen and Deen, M. Jamal},
title = {An X Language-Driven Framework for Systematic Development of Digital Twin Healthcare Systems},
year = {2025},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
issn = {1551-6857},
url = {https://doi.org/10.1145/3729230},
doi = {10.1145/3729230},
abstract = {The rapid advancements in big data and the Internet of Things (IoT) have significantly accelerated the digital transformation of medical institutions, leading to the widespread adoption of Digital Twin Healthcare (DTH). The Cloud DTH Platform (CDTH) serves as a cloud-based framework that integrates DTH models, healthcare resources, patient data, and medical services. By leveraging real-time data from medical devices, the CDTH platform enables intelligent healthcare services such as disease prediction and medical resource optimization. However, the platform functions as a system of systems (SoS), comprising interconnected yet independent healthcare services. This complexity is further compounded by the integration of both black-box AI models and domain-specific mechanistic models, which pose challenges in ensuring the interpretability and trustworthiness of DTH models. To address these challenges, we propose a Model-Based Systems Engineering (MBSE)-driven DTH modeling methodology derived from systematic requirement and functional analyses. To implement this methodology effectively, we introduce a DTH model development approach using the X language, along with a comprehensive toolchain designed to streamline the development process. Together, this methodology and toolchain form a robust framework that enables engineers to efficiently develop interpretable and trustworthy DTH models for the CDTH platform. By integrating domain-specific mechanistic models with AI algorithms, the framework enhances model transparency and reliability. Finally, we validate our approach through a case study involving elderly patient care, demonstrating its effectiveness in supporting the development of DTH models that meet healthcare and interpretability requirements.},
note = {Just Accepted},
journal = {ACM Trans. Multimedia Comput. Commun. Appl.},
month = apr,
keywords = {Digital Twin, Model-based system engineering, X Language, Medical Cyber-Physical Systems, Digital Twin Healthcare Design}
}

@inproceedings{10.5555/3643142.3643197,
author = {Szabo, Claudia and Castro, Rodrigo and Denil, Joachim and Sanchez, Susan M.},
