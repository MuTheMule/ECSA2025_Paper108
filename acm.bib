}

@inproceedings{10.1145/3611314.3615915,
author = {Sim\~{o}es, Bruno and Del Puy Carretero, Mar\'{\i}a and Martinez Santiago, Jorge and Mu\~{n}oz Segovia, Sebastian and Alcain, Nieves},
title = {TwinArk: A Unified Framework for Digital Twins based on Micro-frontends, Micro-Services, and Web 3D},
year = {2023},
