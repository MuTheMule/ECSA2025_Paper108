pages = {10–19},
numpages = {10},
keywords = {co-simulation, cyber-physical systems, distributed simulation, execution-integration, model-integration, modeling and simulation, simulation integration platforms, tool-integration},
location = {Montreal, Quebec, Canada},
series = {DESTION '19}
}

@inproceedings{10.1145/3408066.3408076,
author = {Rasheed, Yawar and Azam, Farooque and Anwar, Muhammad Waseem},
title = {A Novel Framework and Tool for Multi-Purpose Modeling of Physical Infrastructures},
year = {2020},
isbn = {9781450377034},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3408066.3408076},
doi = {10.1145/3408066.3408076},
abstract = {Human Society has evolved unprecedentedly, from mankind living in caves to the most sophisticated and complex physical infrastructures of contemporary technologically advanced era. Model Driven Architecture (MDA), as against code centric approaches, present an abstract view enabling fair visualization of complex systems through abstraction and modelling. In the context of MDA, physical infrastructures need to be modeled and analyzed for model based development of number of interdependent technical systems like Security, Communication, Internet of Things (IOTs), home automation etc. This leads to a dire need of a multipurpose framework, editor and tool for modeling and visualization of physical infrastructures in such a manner that the developed models may be extended, automated and used for variety of domains and in developing various systems. In this article, we propose a framework that not only allows modelling/ planning of complex physical infrastructures but can also be extended for the model based development of wide-ranging systems. In the proposed framework, Physical Infrastructure Multipurpose Meta-Model (PIMM) has been introduced for modeling of both simple as well as complex infrastructures. The feasibility of proposed framework is demonstrated through real world case study. Subsequently, an Eclipse based plugin (PIMM editor) has been developed that allows modeling of physical infrastructures with the help of tree editor. Moreover, for graphical modeling and visualization, Physical Infrastructure Modelling Tool (PIMT) with drag / drop functionality is developed in Sirius and distributed via same plugin. The results prove that the proposed framework supports adequate concepts for the modeling and visualization of physical infrastructures and highly effective for model based systems development related to physical infrastructures.},
booktitle = {Proceedings of the 12th International Conference on Computer Modeling and Simulation},
pages = {209–213},
numpages = {5},
keywords = {Eclipse plugin, Meta Model, Model Driven, Physical Infrastructure, Physical Infrastructure DSL, Sirius workbench},
location = {Brisbane, QLD, Australia},
series = {ICCMS '20}
}

@article{10.1145/3360285,
author = {Majid, Amjad Yousef and Donne, Carlo Delle and Maeng, Kiwan and Colin, Alexei and Yildirim, Kasim Sinan and Lucia, Brandon and Pawe\l{}czak, Przemys\l{}aw},
title = {Dynamic Task-based Intermittent Execution for Energy-harvesting Devices},
year = {2020},
issue_date = {February 2020},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
volume = {16},
number = {1},
issn = {1550-4859},
url = {https://doi.org/10.1145/3360285},
doi = {10.1145/3360285},
abstract = {Energy-neutral Internet of Things requires freeing embedded devices from batteries and powering them from ambient energy. Ambient energy is, however, unpredictable and can only power a device intermittently. Therefore, the paradigm of intermittent execution is to save the program state into non-volatile memory frequently to preserve the execution progress. In task-based intermittent programming, the state is saved at task transition. Tasks are fixed at compile time and agnostic to energy conditions. Thus, the state may be saved either more often than necessary or not often enough for the program to progress and terminate. To address these challenges, we propose Coala, an adaptive and efficient task-based execution model. Coala progresses on a multi-task scale when energy permits and preserves the computation progress on a sub-task scale if necessary. Coala’s specialized memory virtualization mechanism ensures that power failures do not leave the program state in non-volatile memory inconsistent. Our evaluation on a real energy-harvesting platform not only shows that Coala reduces runtime by up to 54% as compared to a state-of-the-art system, but also it is able to progress where static systems fail.},
journal = {ACM Trans. Sen. Netw.},
month = feb,
articleno = {5},
numpages = {24},
keywords = {intermittent computing, adaptive software, Energy-harvesting devices}
}

@inproceedings{10.1145/3457335.3461715,
author = {Anand, Mahathi and Murali, Vishnu and Trivedi, Ashutosh and Zamani, Majid},
title = {Formal verification of hyperproperties for control systems},
year = {2021},
isbn = {9781450383998},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3457335.3461715},
doi = {10.1145/3457335.3461715},
abstract = {In recent years, there has been a great deal of interest and research in verifying complex cyber-physical systems (CPS) against rich and expressive specifications [2] such as safety and liveness, to provide formal guarantees for safety-critical systems. While linear temporal logic (LTL) [1] can capture these properties of interest, it is incapable of specifying many information-flow properties that rely on information of multiple traces. These properties, which are described over sets of traces, are called hyperproperties [4] and their corresponding temporal logics have been well studied. The extension of LTL to capture a fragment of hyperproperties, namely, HyperLTL [3], makes use of trace variables to specify individual execution traces and allows for quantification of trace variables to precede a (trace) quantifier-free formula. Here, we present a sound approach for verifying discrete-time control systems against HyperLTL formulae through the use of so-called augmented barrier certificates (ABCs).},
booktitle = {Proceedings of the Workshop on Computation-Aware Algorithmic Design for Cyber-Physical Systems},
pages = {29–30},
numpages = {2},
keywords = {barrier certificates, cyber-physical systems, hyperproperties},
location = {Nashville, Tennessee},
series = {CAADCPS '21}
}

