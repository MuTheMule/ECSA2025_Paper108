@inproceedings{10.1145/3721889.3721930,
author = {Rossini, Rosaria and Jahn, Marco and Zafeiropoulos, Anastasios and Filinis, Nikos and Spatharakis, Dimitrios and Dimolitsas, Ioannis and Fotopoulou, Eleni and Vassilakis, Constantinos and Papavassiliou, Symeon and Zahariadis, Theodore and Seitanidis, Ilias Nektarios and Pages, Enric and Gomez, Guillermo and Grynchenko, Sergiy Remezov},
title = {Open Source approach in two metaOS projects},
year = {2025},
isbn = {9798400715600},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3721889.3721930},
doi = {10.1145/3721889.3721930},
abstract = {Transparency, collaboration, security, and digital sovereignty are the open source values that are also important to many European countries and institutions. Open source software offers practical advantages, cost savings, and opportunities for innovation that contribute to the region's technological advancement and competitiveness, as well as fosters collaboration among developers and encourages innovation. On top of these values, several European projects try to build a sustainable and innovative future. In this paper the authors present two examples of an open source applications of meta-operating system (metaOS). The first NExt generation Meta Operating systems (NEMO) builds the future of the Artificial Intelligence of Things(AIoT)-edge-cloud continuum by introducing an open source, modular and cybersecure metaOS. The second regards the open source solutions provided by the NEPHELE project to assist orchestration of distributed applications across resources in the computing continuum. In this matter, the open source components of the metaOS projects are presented for each functional layer in the architecture, demonstrating the value of open source for the metaOS sustainability in a specific use case.},
booktitle = {Proceedings of the 2nd International Workshop on MetaOS for the Cloud-Edge-IoT Continuum},
pages = {60–65},
numpages = {6},
keywords = {distributed application, meta-orchestration framework, open source software, virtual object, virtual object stack},
