@inproceedings{10.1145/2968456.2974012,
author = {Shrivastava, Aviral and Derler, Patricia and Baboud, Ya-Shian Li and Stanton, Kevin and Khayatian, Mohammad and Andrade, Hugo A. and Weiss, Marc and Eidson, John and Chandhoke, Sundeep},
title = {Time in cyber-physical systems},
