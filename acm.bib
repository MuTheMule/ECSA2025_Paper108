series = {COINS '19}
}

@article{10.1145/3406280,
author = {Anagnostopoulos, Nikolaos Athanasios and Ahmad, Saad and Arul, Tolga and Steinmetzer, Daniel and Hollick, Matthias and Katzenbeisser, Stefan},
